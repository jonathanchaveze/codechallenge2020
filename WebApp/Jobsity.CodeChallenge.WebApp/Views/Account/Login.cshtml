@{
    ViewData["Title"] = "Login";
}

@model LoginViewModel

<h1>Login</h1>

<p>Please fill the form below to get authenticated:</p>

<div asp-validation-summary="All"></div>

<form method="post">

    <div class="form-group">
        <label asp-for="Email"></label>
        <div><input asp-for="Email" class="form-control" /></div>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <div><input asp-for="Password" class="form-control" /></div>
    </div>

    <div class="form-group">
        <button class="btn btn-primary">Sign in</button>
    </div>

    <div class="form-group">
        Don't you have an account? <a asp-action="register">Sign up here</a>
    </div>

</form>